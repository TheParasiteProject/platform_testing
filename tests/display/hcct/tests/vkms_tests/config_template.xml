<configuration description="Config for HWC Compliance Tests">
    <option name="test-suite-tag" value="HCCT" />
    <target_preparer class="com.android.tradefed.targetprep.RootTargetPreparer"/>

    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="stop" />
        <!-- Reboot the DUT because we don't cleanup VKMS due to Writeback issue. -->
        <!-- TODO(b/412666164): replace by "start" when the fix makes its way to the prebuilts. -->
        <option name="teardown-command" value="reboot" />
    </target_preparer>

    <target_preparer class="com.android.tradefed.targetprep.PushFilePreparer">
        <option name="cleanup" value="true" />
        <option name="push" value="{MODULE}->/data/local/tmp/{MODULE}" />
    </target_preparer>

    <test class="com.android.tradefed.testtype.GTest" >
        <option name="native-test-device-path" value="/data/local/tmp" />
        <option name="module-name" value="{MODULE}" />
    </test>

    <metrics_collector class="com.android.tradefed.device.metric.FilePullerLogCollector">
        <option name="directory-keys" value="/data/local/tmp" />
        <option name="collect-on-run-ended-only" value="true" />
        <option name="pull-pattern-keys" value="readback*" />
    </metrics_collector>

</configuration>
