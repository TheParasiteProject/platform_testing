package {
    default_applicable_licenses: ["Android-Apache-2.0"],
    default_team: "trendy_team_desktop_display",
}

cc_defaults {
    name: "hcct_test_defaults",
    defaults: [
        "hwc_deps",
    ],
    shared_libs: [
        "libcutils",
        "liblog",
    ],
    static_libs: [
        "libgtest",
        "libgtest_main",
        "hwc_tester",
    ],
    cflags: [
        "-Wall",
        "-Werror",
    ],
    test_config_template: "hcct_config_template.xml",
    test_suites: [
        "device-tests",
        "general-tests",
        "dts",
    ],
}


cc_test {
    name: "VkmsTestHwcHotplugs",
    srcs: [
        "hotplugs.cpp",
    ],
    defaults: ["hcct_test_defaults"],
    static_libs: [
        "vkms_tester",
    ],
}

cc_test {
    name: "TestHwcComposition",
    srcs: [
        "composition_tests.cpp",
    ],
    defaults: ["hcct_test_defaults"],
}
